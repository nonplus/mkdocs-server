extends ../page

block content
  h2.page-header Administration

  table.table.table-condensed
    thead
      tr
        th Status
        th ID
        th Title
        th
    tbody
      each project in projects
        tr
          td
            =project.statusLabel + " " + project.activityLabel
            if project.error
              | ERROR
          td= project.id
          td= project.title
          td
            form(method="POST", action="/$admin/rebuild/" + project.id)
              input.btn.btn-default.btn-xs(type="submit" value="Rebuild")

  hr

  a.btn.btn-default(href="/$admin/new-project") Register a New Site...
