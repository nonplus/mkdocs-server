extends page

block config-content

  h2.page-header Projects

  table.table.table-condensed
    thead
      tr
        th.shrink Status
        th.shrink ID
        th Title
        th
    tbody
      each project in projects
        tr
          td.shrink
            =project.statusLabel + " " + project.activityLabel
          td.shrink
            a(href=`/$config/projects/${project.id}`)= project.id
              if project.error
                =" "
                span.glyphicon.glyphicon-exclamation-sign.text-danger(aria-hidden='true')
          td= project.title
          td.shrink
            form(method="POST", action=`/$config/projects/${project.id}/rebuild`)
              input.btn.btn-default.btn-xs(type="submit" value="Rebuild")

  hr

  a.btn.btn-default(href="/$config/projects/new") Register a New Project...
